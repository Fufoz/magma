}

void main()
{	
	uint gx = gl_GlobalInvocationID.x;
	if(gx > Common.boidsCount)
	{
		return;
	}

	vec3 nonBlockingDir = findNonBlockingDirection(states[gx]);
	vec3 shiftedDir = separation(states[gx], gx);
	
	vec3 previousDirection = states[gx].direction.xyz;
	
	states[gx].orientation = quatMultiply(rotateFromTo(previousDirection, nonBlockingDir), states[gx].orientation);
	
	mat4 rotMat = quatToRotationMat(rotateFromTo(previousDirection, nonBlockingDir));
	
	states[gx].direction = rotMat * vec4(states[gx].direction.xyz, 1.0);
	states[gx].up = rotMat * states[gx].up;
	states[gx].position += 0.05 * (states[gx].direction);
	
	//fill debug data
	fillDebugData(gx, nonBlockingDir);

	
	instanceTransforms[gx] = 
		loadTranslation(states[gx].position.xyz) *
		quatToRotationMat(states[gx].orientation);
	
}