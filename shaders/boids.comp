float distanceBetween(vec3 first, vec3 second)
{
	float xdelta = second.x - first.x;
	float ydelta = second.y - first.y;
	float zdelta = second.z - first.z;

	return sqrt(xdelta * xdelta + ydelta * ydelta + zdelta * zdelta);
}

vec3 separation(BoidState currentBoid, uint currentBoidId)
{
	vec3 shiftDir = vec3(0.0, 0.0, 0.0);
	for(int i = 0; i < Common.boidsCount; i++)
	{
		if(i != currentBoidId)
		{
			if(distanceBetween(currentBoid.position.xyz, states[i].position.xyz) < Common.minDistance)
			{
				shiftDir += (currentBoid.position - states[i].position).xyz;
			}
		}
	}

	return shiftDir;
}

struct Ray
{
	vec3 origin;
	vec3 direction;
};

bool rayPlaneIntersect(Ray ray, Plane plane, out float distance)
{
	float denominator = dot(ray.direction.xyz, plane.normal.xyz);
	if(denominator > 0)
	{
		return false;
	}

	if(abs(denominator) < 0.001)
	{
		return false;
	}

	float nominator = dot((plane.point.xyz - ray.origin), plane.normal.xyz);
	float tmin = nominator / denominator;
	if(tmin < 0)
	{
		return false;
	}

	distance = tmin;
	return true;
}

vec3 findNonBlockingDirection(BoidState boid)
{
	Ray forwardRay;
	forwardRay.origin = boid.position.xyz;
	forwardRay.direction = boid.direction.xyz;

	Ray bestRay = forwardRay;
	bool startSearchingDirection = false;
	float largestUnobstructedDistance = 0;
	int planeId = -1;

	for(int j = 0; j < 6; j++)
	{
		float intersectionDistance;
		if(rayPlaneIntersect(forwardRay, tankPlanes.planes[j], intersectionDistance))
		{
			if(intersectionDistance < Common.minDistance)
			{
				// largestUnobstructedDistance = intersectionDistance;
				startSearchingDirection = true;
				planeId = j;
				break;
			}
		}
	}

	if(!startSearchingDirection)
	{
		return forwardRay.direction;
	}
	else
	{
		// float largestUnobstructedDistance = 0;	
		vec3 transformedRayPosition = boid.position.xyz;

		for(int i = 0; i < Common.spherePointsCount; i++)
		{
			// vec4 transformedRaySpherePoint = loadTranslation(boid.position.xyz) * spherePoints[i];
			// Ray currentRay;
			// currentRay.origin = transformedRayPosition;
			// currentRay.direction = normalize(transformedRaySpherePoint.xyz - transformedRayPosition);
			Ray currentRay;
			currentRay.origin = boid.position.xyz;
			currentRay.direction = spherePoints[i].xyz;

			//discard rays that are behind fish forward direction
			if(dot(forwardRay.direction, currentRay.direction) < 0)
			{
				continue;
			}

			//loop over each plane and find closest intersection distance
			bool intersectionFound = false;
			for(int j = 0; j < 6; j++)
			{
				float intersectionDistance;
				if(rayPlaneIntersect(currentRay, tankPlanes.planes[j], intersectionDistance))
				{
					if(intersectionDistance > largestUnobstructedDistance && intersectionDistance < Common.minDistance)
					// if(intersectionDistance > largestUnobstructedDistance)
					{
						largestUnobstructedDistance = intersectionDistance;
						intersectionFound = true;
					}
				}
			}

			if(intersectionFound)
			{
				bestRay = currentRay;
			}
			else
			{
				return currentRay.direction;
			}

		}//loop
	}

	return bestRay.direction;
}

